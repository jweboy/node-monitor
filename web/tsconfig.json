{
  "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "rootDir": "src",
      "module": "ESNext",
      "target": "es5",
      "jsx": "react",
      "lib": ["es5", "es6", "dom"],
      "moduleResolution": "node",
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": false,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "allowSyntheticDefaultImports": true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "build",
      "config",
      "babel.config.js"
  ]
}
